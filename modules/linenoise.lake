local deps
if luabuild.config.readline ~= 'linenoise' then
    deps = c.library {LIBDIR..'linenoise',
        src='linenoise',
        base=PWD..'linenoise'
    }
else -- the Lua core is linked against linenoise already!
end

return c.library{LIBDIR..'linenoise',
    src='linenoise',
    incdir = {LUADIR,PWD..'linenoise'},
    deps = deps,
    args=ARGS
}